---
import ProjectCard from '@components/ProjectCard.astro'
import Typescript from '@assets/icons/typescript.astro';
import React from '@assets/icons/react.astro';
import Supabase from '@assets/icons/supabase.astro';
import Tailwind from '@assets/icons/tailwind.astro';
import HTML from '@assets/icons/html.astro';
import CSS from '@assets/icons/css.astro';
import Java from '@assets/icons/java.astro';
import Spring from '@assets/icons/spring.astro';
import MySQL from '@assets/icons/mysql.astro';
import JavaScript from '@assets/icons/javascript.astro';
import SpringSecurity from '@assets/icons/springsecurity.astro';
import Github from '@assets/icons/github.astro';
import Android from '@assets/icons/android.astro';

---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-2">Proyectos</h2>
  <hr class="mb-6 border-zinc-600">

  <ProjectCard projectTitle="Groove Records" projectDescription="E-commerce en el cual se venden CDs y vinilos. El proyecto es una API Rest realizada en Java con Spring Boot. Se implementan herramientas como JWT, Spring Security y la API de Mercado Pago para simular compras." projectLink="https://groove-records-nag2.onrender.com/index.html" githubLink="https://github.com/jez-7/GrooveRecords" image="/images/groover.png">
    <Java />
    <Spring />
    <SpringSecurity />
    <MySQL />
    <HTML />
    <JavaScript />
    <CSS />

  </ProjectCard>

  <ProjectCard projectTitle="App Turnos" projectDescription="Plataforma integral de gestión de turnos y reservas online. El proyecto consta de una API REST desarrollada en Java con Spring Boot y una aplicación móvil nativa en Android con Jetpack Compose. Implementa seguridad mediante JWT y Spring Security, persistencia de datos con JPA/Hibernate, y una interfaz web pública para que los clientes finales realicen reservas de forma automatizada." githubLink="https://github.com/jez-7/reservas-front" image="/images/android.png">
    <Java />
    <Spring />
    <SpringSecurity />
    <MySQL />
    <Android />
    <HTML />
    <JavaScript />
    <CSS />

  </ProjectCard>


 
</section>
